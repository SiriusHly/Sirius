use MyHealthy

DROP TABLE  article ;
CREATE TABLE article(
--起始为1，自动增加为1，mysql
article_id INT NOT NULL IDENTITY(0,1) PRIMARY KEY,
article_creator_id VARCHAR(255) DEFAULT NULL,
article_title VARCHAR(255) DEFAULT NULL,
--超过 8,000 个字符的字符串和大于 8,000 字节的二进制数据存储为名为 text 和 image 的特殊数据类型。
--超过 4,000 个字符的 Unicode 字符串存储为 ntext 数据类型。
article_content TEXT,
article_category_ids VARCHAR(255) DEFAULT NULL,
article_tags VARCHAR(255) DEFAULT NULL,
article_view_count INT DEFAULT '0',
article_comment_count INT DEFAULT'0',
article_like_count INT DEFAULT '0',
article_create_time VARCHAR(255) DEFAULT NULL,
article_comment_status INT DEFAULT '1',
article_status INT DEFAULT '1',
);

INSERT INTO article(article_creator_id,article_title,article_content,article_category_ids,article_tags,article_view_count,article_comment_count,article_like_count,article_create_time,article_comment_status,article_status)
 VALUES('17865168830','java入门','java从入门到搬砖','1,2','java,sql','2018-8-1','1','1',99,99,99);

SELECT * FROM article;

SELECT TOP 4 * FROM article WHERE article_id NOT IN (SELECT TOP 7 article_id FROM article);

--从前往后分页查询方法
SELECT * FROM article WHERE article_id BETWEEN 0 AND 6;

--倒序分页查询方法
SELECT TOP 4 * FROM article WHERE article_id NOT IN(SELECT TOP 4 article_id FROM article ORDER BY article_id DESC)ORDER BY article_id DESC;

SELECT count(*) FROM article;